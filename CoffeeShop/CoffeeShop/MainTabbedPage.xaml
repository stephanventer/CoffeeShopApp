<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeShop.MainTabbedPage">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="MENU" BackgroundColor="#533A33">
        <StackLayout>
            <Frame BackgroundColor="#533A33"  VerticalOptions="CenterAndExpand">
                <Image Source="coffeelogo.png" VerticalOptions="Center" HorizontalOptions="Center" />
            </Frame>
            <Frame BackgroundColor="#EAB13D" >
                <Button x:Name="drinksButton" Text="Coffee &amp; Drinks" TextColor="White" FontSize="28" BackgroundColor="Transparent" Clicked="drinksButton_Clicked"/>
            </Frame>
            <Frame BackgroundColor="#EAB13D">
                <Button x:Name="breakfastButton" Text="Breakfast" TextColor="White" FontSize="28" BackgroundColor="Transparent"/>
            </Frame>
            <Frame BackgroundColor="#EAB13D">
                <Button x:Name="lunchButton" Text="Lunch" TextColor="White" FontSize="28" BackgroundColor="Transparent"/>
            </Frame>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="ABOUT">
        <StackLayout>
            <Label Text="This is the about page" />
        </StackLayout>
    </ContentPage>
    <ContentPage Title="MAP">
        <StackLayout >
            <!--<WebView x:Name="mapWebView" Source="https://maps.apple.com/place?auid=18337340244138189750" VerticalOptions="FillAndExpand" />-->
            <!--<WebView x:Name="mapWebView" Source="https://osm.org/go/uuVhgl9~V?m=" VerticalOptions="FillAndExpand" />-->
            <WebView x:Name="mapWebView" Source="https://mobile.here.com/p/h-?msg=Coffix" VerticalOptions="FillAndExpand" />
            
        </StackLayout>
    </ContentPage>
</TabbedPage>

